<odoo>
  <record id="view_batch_choose_delivery_carrier_form" model="ir.ui.view">
    <field name="name">batch.choose.delivery.carrier.form</field>
    <field name="model">batch.choose.delivery.carrier</field>
    <field name="arch" type="xml">
      <form>
        <group>
          <field name="carrier_id"/>
        </group>
        <footer>
          <button string="应用" type="object" name="action_apply" class="btn-primary"/>
          <button string="取消" class="btn-secondary" special="cancel"/>
        </footer>
      </form>
    </field>
  </record>
</odoo>