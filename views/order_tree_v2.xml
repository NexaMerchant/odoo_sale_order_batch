<odoo>
  <data>
    <record id="sale_order_filter_shipping_status" model="ir.ui.view">
        <field name="name">sale.order.list.select</field>
        <field name="model">sale.order</field>
        <field name="inherit_id" ref="sale.view_sales_order_filter"/>
        <field name="arch" type="xml">
            <xpath expr="//search" position="inside">
              <group expand="0" string="按发货状态分组" name="shipping_status_group">
                <filter string="所有" name="shipping_status_all" domain="[('shipping_status', '!=', False)]" context="{'search_default_shipping_status_all': 1}"/>
                <filter string="待处理" name="shipping_status_pending" domain="[('shipping_status', '=', 'pending')]" context="{'search_default_shipping_status_pending': 1}"/>
                <filter string="运单号申请" name="shipping_status_draft" domain="[('shipping_status', '=', 'draft')]" context="{'search_default_shipping_status_draft': 1}"/>
                <filter string="待打单有货" name="shipping_status_waiting_stock" domain="[('shipping_status', '=', 'waiting_stock'),  ('all_in_stock', '=', True)]" context="{'search_default_shipping_status_waiting_stock': 1}"/>
                <filter string="待打单缺货" name="shipping_status_waiting_backorder" domain="[('shipping_status', '=', 'waiting_backorder'), ('all_in_stock', '=', False)]" context="{'search_default_shipping_status_waiting_backorder': 1}"/>
                <filter string="已交运发货成功" name="shipping_status_shipped_success" domain="[('shipping_status', '=', 'shipped_success')]" context="{'search_default_shipping_status_shipped_success': 1}"/>
                <filter string="已交运发货失败" name="shipping_status_shipped_failed" domain="[('shipping_status', '=', 'shipped_failed')]" context="{'search_default_shipping_status_shipped_failed': 1}"/>
                <filter string="已退款" name="shipping_status_refunded" domain="[('shipping_status', '=', 'refunded')]" context="{'search_default_shipping_status_refunded': 1}"/>
                <filter string="已搁置" name="shipping_status_on_hold" domain="[('shipping_status', '=', 'on_hold')]" context="{'search_default_shipping_status_on_hold': 1}"/>
                <filter string="暂不发" name="shipping_status_not_postd" domain="[('shipping_status', '=', 'not_postd')]" context="{'search_default_shipping_status_not_postd': 1}"/>
                <filter string="其他" name="shipping_status_other" domain="[('shipping_status', '=', 'other')]" context="{'search_default_shipping_status_other': 1}"/>
              </group>
              <separator/>
              <group expand="0" string="按照发货国家分组" name="shipping_country_group">
                <filter string="所有" name="shipping_country_all" domain="[('shipping_country', '!=', False)]" context="{'search_default_shipping_country_all': 1}"/>
                <filter string="美国" name="shipping_country_us" domain="[('shipping_country', '=', 'US')]" context="{'search_default_shipping_country_us': 1}"/>
                <filter string="德国" name="shipping_country_de" domain="[('shipping_country', '=', 'DE')]" context="{'search_default_shipping_country_de': 1}"/>
                <filter string="西班牙" name="shipping_country_es" domain="[('shipping_country', '=', 'ES')]" context="{'search_default_shipping_country_es': 1}"/>
                <filter string="荷兰" name="shipping_country_nl" domain="[('shipping_country', '=', 'NL')]" context="{'search_default_shipping_country_nl': 1}"/>
                <filter string="比利时" name="shipping_country_be" domain="[('shipping_country', '=', 'BE')]" context="{'search_default_shipping_country_be': 1}"/>
                <filter string="瑞士" name="shipping_country_ch" domain="[('shipping_country', '=', 'CH')]" context="{'search_default_shipping_country_ch': 1}"/>
                <filter string="奥地利" name="shipping_country_at" domain="[('shipping_country', '=', 'AT')]" context="{'search_default_shipping_country_at': 1}"/>
                <filter string="澳大利亚" name="shipping_country_au" domain="[('shipping_country', '=', 'AU')]" context="{'search_default_shipping_country_au': 1}"/>
                <filter string="法国" name="shipping_country_fr" domain="[('shipping_country', '=', 'FR')]" context="{'search_default_shipping_country_fr': 1}"/>
                <filter string="意大利" name="shipping_country_it" domain="[('shipping_country', '=', 'IT')]" context="{'search_default_shipping_country_it': 1}"/>
                <filter string="加拿大" name="shipping_country_ca" domain="[('shipping_country', '=', 'CA')]" context="{'search_default_shipping_country_ca': 1}"/>
                <filter string="英国" name="shipping_country_gb" domain="[('shipping_country', '=', 'GB')]" context="{'search_default_shipping_country_gb': 1}"/>
                <!-- <filter string="其他" name="shipping_country_other" domain="[('shipping_country', 'not in', ['US', 'CA', 'GB'])]" context="{'search_default_shipping_country_other': 1}"/> -->
              </group>
              <separator/>
          </xpath>
        </field>
    </record>
  </data>
</odoo>